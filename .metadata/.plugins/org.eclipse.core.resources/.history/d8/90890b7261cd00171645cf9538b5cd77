	    	  }else {
	    		  n1 = impar(n1);
	    	  }
	    	  longitudN1 ++;	    	 
	      } 
	      
	      // Operamos con el segundo número
	      
	      long longitudN2 = 0;
	      while (n2>1) {
	    	  if (n2%2 == 0){
	    		  n2 = par(n2);
	    	  }else {
	    		  n2 = impar(n2);
	    	  }
	    	  longitudN2 ++;	    	 
	      }
	      
	      // Sumamos uno para contar con el propio número en la sucesión
	      longitudN1 = longitudN1 + 1;
	      longitudN2 = longitudN2 + 1; 
	      
	      // Creamos una condicion para la suma, para que no salga un número negativo
	      if (longitudN1 > longitudN2) {
	    	  
