package triangulos;

import java.util.Scanner;
  public class trianguloderecha{
    public static void main (String args[]){
      Scanner in = new Scanner (System.in);
      int n;
      do{
	        System.out.println ("Teclee un n√∫mero de filas: ");
	        n = in.nextInt();
	  }while ((n<=0)||(n>53));
      int ast;
      int fil;
      int num
      int i = 1;
      for (fil=1; fil<=n; fil++){
        for (int b=1; b<=(n-fil); b++){
        	System.out.println(" ");
        }
        num = fil;
        for (int t=1;t<=fil;t++){
        	System.out.print(num%10+" ");
        	num ++;
        }
        System.out.println();
      }
    }
  }
  
